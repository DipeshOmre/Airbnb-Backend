<%- include("../partials/head") %>

    <%- include("../partials/nav") %>
        <div class=" mt-8">

            <a href='/host/add-home' class="border border-black p-2 rounded-2xl hover:text-yellow-400 transition">Add Home</a>
            <h1>here are your favourites:</h1>
        </div>
        <ul class="list-disc flex flex-col justify-center items-center list-inside space-y-2">
            <% registeredHomes.forEach((element)=> {%>

                <li class=" w-[80%] list-none transition-colors duration-300">
                        <div
                            class="max-w-sm mx-auto border flex flex-col justify-center items-center border-b-gray-900 bg-white rounded-2xl shadow-lg p-6 space-y-4 hover:shadow-2xl transition-shadow duration-300">
                            <div class="text-lg font-semibold text-gray-700"><%= element.homeName %></div>
                            <div class="text-lg font-semibold text-gray-700"><%= element.location %></div>
                            <div class="text-lg font-semibold text-gray-700"><%= element.price %></div>
                            <div class="text-lg font-semibold  text-gray-700"><%= element.rating %></div>
                            <button class="self-end cursor-pointer border border-black p-2 rounded-2xl">Book</button>
                        </div>

                </li>
                <% }); %>
        </ul>
    <%- include("../partials/footer") %>

        </body>

        </html>